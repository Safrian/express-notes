<div class="menu">
  <a href="/notes/create" class="nes-btn is-primary">
    <i class="nes-icon coin is-small"></i> New Note</a>
</div>
<div class="notes">
  <% if ( notes && notes.length > 0 ) { %>
    <% notes.forEach(function (note) { %>
      <div class="note">
        <div class="nes-container is-dark">
          <h2><a href="/notes/<%= note._id %>/edit"><%= note.title %></a></h2>
          <p><%= note.body %></p>
          <span class="nes-text is-disabled date"><%= noteAge(note.createdAt) %></span>
          <div class="">
            <a class="nes-btn is-warning" href="/notes/<%= note._id%>/edit">
              <i class="nes-icon heart is-small"></i> Edit
            </a> 
            <a class="nes-btn is-error" href="#">
              <i class="nes-icon close is-small"></i> Delete
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div>No notes yet...<a href="#" class="nes-btn is-primary">Create one here</a></div>
  <% } %>
</div>
